    <dependency org="medcommons" name="gateway-interfaces" rev="1.0.155" conf="default" />
    <dependency org="medcommons" name="medcommons-utils" rev="1.0.54" conf="default" />
    <dependency org="medcommons" name="medcommons-configuration" rev="1.0.22" conf="default" />
    <dependency org="medcommons" name="medcommons-crypto" rev="1.0.13" conf="default" />
    <dependency org="xfire" name="xfire"     rev="1.2.6" conf="default" />
    <dependency org="apache" name="commons-httpclient"     rev="3.0.1" conf="default" />
    <dependency org="apache" name="commons-logging"     rev="1.1.1" conf="default" />
    <dependency org="medcommons" name="medcommons-build"  rev="1.0.5" conf="default" />

    <!-- compile / test dependencies -->
    <dependency org="groovy" name="groovy-all"  rev="1.7.0" conf="compile->*" />
  </dependencies>
</ivy-module>
