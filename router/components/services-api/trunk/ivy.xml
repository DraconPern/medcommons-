  <dependencies>
    <!-- runtime dependencies -->
    <dependency org="junit" name="junit" rev="4.4" conf="default" />
    <dependency org="jdom" name="jdom" rev="1.0" conf="default" />
    <dependency org="apache" name="log4j" rev="1.2.8" conf="default" />
