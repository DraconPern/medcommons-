#!/bin/bash

if [ $(whoami) != "root" ]
then
    echo "You must be root to run this command."
    exit 1
fi

USAGE='usage: medcommons-control [start|stop]'

START_SERVICES="httpd tomcat mc_locals gateway"
STOP_SERVICES="$START_SERVICES"

if [ -z $1 ]
then
    echo $USAGE
    exit 1
fi

case $1 in
    start)
        SERVICES="$START_SERVICES";
	CHK=on;;
    stop)
        SERVICES="$STOP_SERVICES";
	CHK=off;;
    *)
	echo $USAGE
	exit 1
esac

for SERVICE in $SERVICES; do
    /sbin/chkconfig $SERVICE $CHK
    if [ $SERVICE == "tomcat" ]
    then
	/etc/init.d/$SERVICE $1 || echo "${SERVICE} failed to $1!"
	if [ $CHK == "off" ]
	then
	    echo "(kill -9 tomcat)";
	    pkill -9 -u tomcat jsvc || echo "${SERVICE} failed to die";
	fi
    else
	/etc/init.d/$SERVICE $1 || echo "${SERVICE} failed to $1!"
    fi
done

/sbin/chkconfig yum-updatesd off
